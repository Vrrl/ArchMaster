{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["node"],
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "lib": ["es2019"],
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@infra/*": ["src/infra/*"],
      "@modules/*": ["src/modules/*"],
      "@test/*": ["test/*"]
    },
    "rootDirs": [
      "./src",
      "./src/core",
      "./src/infra",
      "./src/modules/",
      "./test"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true 
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "testing/testing.ts",
    "testing/testing.ts",
    "serverless.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "./dist"
  ]
}